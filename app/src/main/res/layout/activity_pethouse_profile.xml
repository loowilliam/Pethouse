<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PethouseProfileActivity"
    android:fillViewport="true">
<!--    Fillviewport agar scroll view memenuhi isi dari screen-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGreyBackground">
        <!--   Created By William Loo
       Date : 22 Maret 2020
       Purpose : Customer can view pethouse location profile
        -->


        <!--Updated By: Eric
        Date: 25 April 2020
        Purpose: Add Description of Pethouse Hotel-->
        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/home_background_30dp"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPagerPetHouseProfile"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@id/iv_background">
        </androidx.viewpager.widget.ViewPager>


        <ImageView
            android:id="@+id/iv_backbutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_marginStart="20dp"
            android:layout_alignParentLeft="true"/>

        <RelativeLayout
            android:layout_below="@id/viewPagerPetHouseProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_pethouse">
            <TextView
                android:id="@+id/tv_pethousename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:text="Pandora's Pet Hotel"
                android:textColor="@color/colorMain"
                android:textSize="20sp"/>
            <TextView
                android:layout_below="@id/tv_pethousename"
                android:id="@+id/tv_pethouselocationtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:text="Location:" />
            <TextView

                android:layout_below="@id/tv_pethousename"
                android:id="@+id/tv_location"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="90dp"
                android:text="Kebon Jeruk, Jakarta" />

            <TextView
                android:layout_below="@id/tv_pethouselocationtitle"
                android:id="@+id/tv_pethousedescriptiontitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Pethouse Description"
                android:textSize="20sp"
                android:textColor="@color/colorMain"/>

            <TextView
                android:layout_below="@id/tv_pethousedescriptiontitle"
                android:id="@+id/tv_pethousedescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isi Text"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_below="@id/tv_pethousedescription"
                android:id="@+id/tv_remainingslottitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:text="Remaining pet slot available: "
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_remainingslot"
                android:layout_toRightOf="@id/tv_remainingslottitle"
                android:layout_below="@id/tv_pethousedescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                android:text="10 pets"/>
            <Button
                android:layout_below="@id/tv_remainingslottitle"
                android:id="@+id/btnBookNow"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_button_third"
                android:text="Book Now"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/SliderDots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_below="@+id/viewPagerPetHouseProfile">
        </LinearLayout>


    </RelativeLayout>
</ScrollView>