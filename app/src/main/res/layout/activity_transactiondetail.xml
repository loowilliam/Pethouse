<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreyBackground"
    tools:context=".activity.TransactionDetailActivity">
<!--
Edited By: Jeffrey
Date: 24 April 2020 22.18
Purpose: Add UI to Transaction Detail
-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/home_background" />

    <ImageView
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="@drawable/box_checkin" />

    <!--Back button-->
    <ImageView
        android:id="@+id/iv_backbutton"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_back" />
    <TextView
        android:id="@+id/tv_locationname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="95dp"
        android:textSize="18sp"
        android:text="Pandora's Pet Hotel"
        android:textAllCaps="false"
        android:textColor="@color/colorMain" />

    <ImageView
        android:layout_width="330dp"
        android:layout_height="210dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:background="@drawable/box_checkin" />

    <TextView
        android:id="@+id/tv_contactinformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="190dp"
        android:textSize="18sp"
        android:text="Contact Information"
        android:textAllCaps="false"
        android:textColor="@color/colorMain" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="240dp"
        android:textSize="18sp"
        android:text="Name"
        android:textAllCaps="false"
        android:textColor="@color/colorLightGrey" />

    <TextView
        android:id="@+id/tv_nameperson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="260dp"
        android:textSize="15sp"
        android:text="Jeno Lee"
        android:textAllCaps="false"
        android:textColor="@color/colorMain" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="282dp"
        android:textSize="18sp"
        android:text="Email"
        android:textAllCaps="false"
        android:textColor="@color/colorLightGrey" />

    <TextView
        android:id="@+id/tv_emailname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="300dp"
        android:textSize="15sp"
        android:text="abc@gmail.com"
        android:textAllCaps="false"
        android:textColor="@color/colorMain" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="325dp"
        android:textSize="18sp"
        android:text="Phone"
        android:textAllCaps="false"
        android:textColor="@color/colorLightGrey" />

    <TextView
        android:id="@+id/tv_phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="342dp"
        android:textSize="15sp"
        android:text="+6281230423035"
        android:textAllCaps="false"
        android:textColor="@color/colorMain" />

    <ImageView
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="405dp"
        android:background="@drawable/box_checkin" />

    <TextView
        android:id="@+id/tv_totalprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="430dp"
        android:textSize="18sp"
        android:text="Total Price"
        android:textAllCaps="false"
        android:textColor="@color/colorLightGrey" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="430dp"
        android:textSize="15sp"
        android:text="Rpxxx.xxx.xxx"
        android:textAllCaps="false"
        android:textAlignment="textEnd"
        android:textColor="@color/colorMain" />

    <Button
        android:id="@+id/btn_pay"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="520dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/rounded_button_third"
        android:text="Book"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="15sp" />

</RelativeLayout>