<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_custom_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/box_checkin"
    >

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textStyle="bold"
        android:textSize="60sp"
        android:textColor="@color/colorMain"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        >

        <TextView
            android:id="@+id/tv_bookingDatecl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14/05/2020"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="25sp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tv_periodcl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:text="Long Period"
            android:textColor="@color/colorMain"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_totalPaymentcl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:text="Total Payment : Rp. 100.000;"
            android:textColor="@color/colorMain"
            android:textSize="18sp"
            android:layout_alignParentEnd="true"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </LinearLayout>

</LinearLayout>