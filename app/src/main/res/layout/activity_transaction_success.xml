<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.project.pethouse.activity.TransactionSuccessActivity"
    android:background="@color/colorWhite">

    <!--
    Created by : William Loo
    Date : 24/04/2020
    Purpose : to inform customer that transaction success
    -->

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/home_background"/>

    <ImageView
        android:id="@+id/iv_success"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_check_circle_black_24dp"/>
    <TextView
        android:layout_below="@id/iv_success"
        android:id="@+id/tv_successtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Booking Success!"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:textColor="@color/colorLightGreen"/>


<!--    <ImageView-->
<!--        android:id="@+id/iv_backbutton"-->
<!--        android:layout_width="30dp"-->
<!--        android:layout_height="30dp"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:src="@drawable/ic_arrow_back_black_24dp"-->
<!--        android:layout_marginLeft="10dp"-->
<!--        android:layout_alignParentLeft="true"/>-->


    <!--
    Button dibawah ini edited by Eric
    ganti text = menjadi Back to main menu
    Date 25 April 0:25
    -->

    <TextView
        android:layout_below="@id/iv_background"
        android:id="@+id/tv_successdescription"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textColor="@color/colorMain"
        android:text="Isi Text"/>

    <Button
        android:id="@+id/btnDetailTransaction"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_button_third"
        android:text="Back to main menu"
        android:layout_marginTop="100dp"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:layout_below="@id/tv_successdescription"
        android:textSize="15sp" />


</RelativeLayout>