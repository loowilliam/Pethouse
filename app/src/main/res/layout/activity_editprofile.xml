<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EditActivity"
    android:background="@color/colorWhite">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/home_background"/>

    <ImageView
        android:id="@+id/iv_backbutton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:id="@+id/iv_CustomerPhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/ic_account_circle_black_24dp"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:text="Name"
        android:textSize="15sp"
        android:layout_marginTop="70dp"
        android:layout_below="@id/iv_CustomerPhoto"

        android:textColor="@color/colorMain" />

    <EditText
        android:id="@+id/et_namevalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_CustomerPhoto"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:ems="11"
        android:background="@android:color/transparent"
        android:text="Simp"
        android:textSize="15sp"
        android:layout_marginTop="70dp"
        android:maxLength="20"
        android:textAlignment="textEnd"
        android:inputType="text"
        android:textColor="@color/colorMain" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:text="Email"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tv_name"
        android:textColor="@color/colorMain" />

    <EditText
        android:id="@+id/et_emailvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_namevalue"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:text="666@gmail.com"
        android:ems="11"
        android:textSize="15sp"
        android:maxLength="30"
        android:layout_marginTop="20dp"
        android:textAlignment="textEnd"
        android:inputType="textEmailAddress"
        android:background="@android:color/transparent"
        android:textColor="@color/colorMain" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:text="Phone"
        android:layout_below="@id/tv_email"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorMain" />

    <EditText
        android:id="@+id/et_phonevalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_emailvalue"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:background="@android:color/transparent"
        android:text="0866-6666-6666"
        android:ems="11"
        android:textSize="15sp"
        android:maxLength="20"
        android:layout_marginTop="20dp"
        android:inputType="phone"
        android:textAlignment="textEnd"
        android:textColor="@color/colorMain" />


    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:text="Old Password"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tv_phone"
        android:layout_marginBottom="100dp"
        android:textSize="15sp"
        android:textColor="@color/colorMain" />

    <EditText
        android:id="@+id/et_passwordvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_phonevalue"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:inputType="textPassword"
        android:background="@android:color/transparent"
        android:hint="Enter Old Password"
        android:ems="11"
        android:textSize="15sp"
        android:maxLength="20"
        android:layout_marginTop="20dp"
        android:textAlignment="textEnd"
        android:textColor="@color/colorMain"/>

    <TextView
        android:id="@+id/tv_re_enterpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:text="Enter New Password"
        android:layout_below="@id/tv_phone"
        android:layout_marginTop="60dp"
        android:textSize="15sp"
        android:textColor="@color/colorMain" />

    <EditText
        android:id="@+id/et_repasswordvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_passwordvalue"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:inputType="textPassword"
        android:background="@android:color/transparent"
        android:hint="Change password(optional)"
        android:ems="11"
        android:textSize="15sp"
        android:maxLength="20"
        android:layout_marginTop="20dp"
        android:textAlignment="textEnd"
        android:textColor="@color/colorMain"/>

    <Button
        android:id="@+id/btnSave"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rounded_button_third"
        android:text="Save Changes"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="15sp" />




</RelativeLayout>