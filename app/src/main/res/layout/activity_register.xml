<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain"
    tools:context=".activity.RegisterActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="3dp"
        app:srcCompat="@drawable/logo_pethouse" />


    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView2"
        android:text="Register"
        android:textColor="@color/colorWhite"
        android:textSize="15pt" />

    <!--    UserName-->
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        android:text="Username"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <!--    Phone-->
    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_username"
        android:layout_marginStart="30dp"
        android:text="Phone"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <!--    Email-->
    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/tv_phone"
        android:text="Email"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:ems="9"
        android:hint="Name"
        android:inputType="textEmailAddress"
        android:layout_marginTop="255dp"
        android:textAlignment="textEnd"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:maxLength="35"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:background="@android:color/transparent"
        android:ems="9"
        android:layout_below="@+id/et_phone"
        android:hint="eg: xxx@domain.com"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="20dp"
        android:textAlignment="textEnd"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:maxLength="35"/>

    <!--    Password-->
    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/tv_email"
        android:text="Password"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="20dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/et_email"
        android:background="@android:color/transparent"
        android:ems="8"
        android:hint="password"
        android:inputType="textPassword"
        android:layout_marginBottom="20dp"
        android:textAlignment="textEnd"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:maxLength="20"/>

    <!--    Re-enter Password-->
    <TextView
        android:id="@+id/tv_re_enter_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_password"
        android:layout_marginStart="30dp"
        android:text="Re-enter Password"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:background="@android:color/transparent"
        android:ems="9"
        android:hint="ex: +628xxxxxxx"
        android:inputType="phone"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/et_username"
        android:textAlignment="textEnd"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:maxLength="15"/>

    <EditText
        android:id="@+id/et_re_enter_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:background="@android:color/transparent"
        android:ems="6"
        android:hint="password"
        android:inputType="textPassword"
        android:textAlignment="textEnd"
        android:layout_below="@+id/et_password"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:maxLength="20"/>

    <Button
        android:id="@+id/btn_register"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_re_enter_password"
        android:background="@drawable/rounded_button_primary"
        android:text="Register"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:textColor="@color/colorMain" />

    <Button
        android:id="@+id/btn_login"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_register"
        android:background="@android:color/transparent"
        android:text="Already have an account? Login here!"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />


</RelativeLayout>